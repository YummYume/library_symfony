{% extends 'base.html.twig' %}

{% block title %}Library{% endblock %}

{% block body %}
    <h1>Librarie {{ library.name }}</h1>

    <h2>Les livres ({{ library.books|length }}) :</h2>
    <ul>
        {% for book in library.books %}
            <li>
                <a href="{{ path('book_show', {'id': book.id}) }}">{{ book.title }}</a>
            </li>
        {% endfor %}
    </ul>

    <a href="{{ path('index')}}">Retour</a>
{% endblock %}
